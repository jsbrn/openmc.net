<div class = "container" style = "margin-top: 15px;">
	<div class = "two-thirds column panel">
		<h3>Player List</h3>
		<table class = "u-full-width">
			<tbody>
				{{#each all}}
				<tr>
					<td>
						<center>
							<img src = "https://www.mc-heads.net/head/{{name}}/48">
						</center>
					</td>
					<td>
						<span title = "{{#playerStatusDesc this}}{{/playerStatusDesc}}" class = "{{#playerStatus this}}{{/playerStatus}}">{{name}}</span>
					</td>
					<td>	
						<b class = "{{#formatRep rep}}{{/formatRep}}">{{rep}}</b>
					</td>
					<td>
						<a href = "/player/{{name}}">
							<button>View player</button>
						</a>
					</td>
				</tr>
				{{/each}}	
			</tbody>
		</table>
	</div>
	<div class = "one-third column panel">
		<h3>Statistics</h3>

		<span class = "black-bold">{{all.length}}</span> total players.<br>
		<span class = "green-bold">{{online.length}}</span> online players.<br>
		<span class = "green-bold">{{members.length}}</span> members.<br>
		<span class = "red-bold">{{banned.length}}</span> banned players.
	</div>
</div>

